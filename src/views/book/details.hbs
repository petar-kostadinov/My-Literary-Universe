<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{book.title}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-director">Автор: {{book.author}}</p>
                    </div>
                </div>
                <p class="disc">Description: {{book.description}}</p>
            </div>
            {{#if isOwner}}
            <div class="details-btn">
                <a href="/books/{{book.id}}/edit" class="details">Редактирай</a>
                <a href="/books/{{book.id}}/delete" class="details">Изтрий</a>
            </div>
            {{/if}}
        </div>
        <div class="card_right">
            <img src="{{book.imageUrl}}" alt="{{book.title}}">
        </div>
    </div>

